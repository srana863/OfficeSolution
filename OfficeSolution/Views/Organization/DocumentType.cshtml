
<aside class="main-sidebar sidebar-dark-primary elevation-4" id="sidenavmenu">
    @await Component.InvokeAsync("SideNav", new { actionName = ViewContext.RouteData.Values["Action"], controllerName = ViewContext.RouteData.Values["Controller"], homeActionName = "Index", homeControllerName = "Recruitment", home = false });
</aside>

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Recruitment</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Organization">Organization</a></li>
                        <li class="breadcrumb-item active">Document</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <section class="content">
        <div class="container-fluid">
            <div class="card card-blue">
                <div class="card-header">
                    <h3 class="card-title">Job List Setup</h3>
                </div>
                <form class="form-horizontal" id="frmProfile">
                    <div class="card-body">
                        <input type="hidden" class="form-control form-element" id="JobId" name="JobId" />
                        <input type="hidden" class="form-control form-element" id="OrgId" name="OrgId" />
                        <div class="form-group row" id="JobTypeContainer">
                            <label class="col-sm-2 control-label">Select Job Type<span style="color:red">*</span></label>
                            <div class="col-sm-4">
                                <select class="form-control form-element validation" data-v-index="0" required id="JobType" name="JobType">
                                    <option>Select Job Type</option>
                                    <option value="new">New</option>
                                    <option value="existing">Existing</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row" id="SOCMainContainer">
                            <label class="col-sm-2 control-label">SOC Code<span style="color:red">*</span></label>
                            <div class="col-sm-4" id="SOCContainer">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 control-label">Department<span style="color:red">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control form-element validation" required id="Department" name="Department" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 control-label">Job Title<span style="color:red">*</span></label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control form-element validation" required id="JobTitle" name="JobTitle" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 control-label">Job Descriptions</label>
                            <div class="col-sm-10">
                                <textarea class="form-element validation" required id="JobDescription" name="JobDescription"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="button" id="btnSave" class="btn btn-success pull-right"><i class="fa fa-save"></i> Save </button>
                        <button type="reset" id="btnClear" class="btn btn-danger pull-right"><i class="fa fa-refresh"></i> Clear</button>
                    </div>
                    <!-- /.card-footer -->
                </form>
            </div>

            <!-- /.row -->
        </div>
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="card card-blue">
                <div class="card-header">
                    <h3 class="card-title">Organisation Document</h3>
                </div>
                <div class="card-body">
                    <div id="formDetails"></div>
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/pageJs/settings/DocumentType.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            DocumentType.init();
        });
    </script>
}
