@model Layer.Model.ViewModel.Settings.SideNavViewModel
<!-- Brand Logo -->
<a href="index3.html" class="brand-link">
    <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
    <span class="brand-text font-weight-light">Office Solution</span>
</a>
@{
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a href="@Url.Action(Model.SubModuleViewModel.ActionName,Model.SubModuleViewModel.ControllerName)" class="nav-link">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Dashboard
                        </p>
                    </a>
                </li>
                @if (Model.SectionViewModels.Any())
                {
                    foreach (var s in Model.SectionViewModels)
                    {
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-copy"></i>
                                <p>
                                    @s.SectionName
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                @foreach (var sc in s.ScreenViewModels)
                                {
                                    <li class="nav-item">
                                        <a href="@sc.URL" class="nav-link">
                                            <i class="far fa-circle nav-icon"></i>
                                            <p>@sc.ScreenName</p>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    }
                }

            </ul>
        </nav>
    </div>
}
