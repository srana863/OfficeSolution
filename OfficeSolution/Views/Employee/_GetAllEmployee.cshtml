@model IEnumerable<Layer.Model.ViewModel.Institute.EmployeeViewModel>
@{

    int sl = 1;

    <table id="tblEmployeeDetails" class="table table-bordered table-striped dataTable" >
        <thead>
            <tr>
                <th>SL</th>
                <th>Employee Name</th>
                <th>Department</th>
                <th>Designation</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var item in Model.OrderByDescending(o => o.EmployeeFullName))
                {
                    <tr>
                        <td>
                            @sl @{
                                sl++;
                            }
                        </td>
                        <td>@item.EmployeeFullName</td>
                        <td>@item.DepartmentName</td>
                        <td>@item.DesignationName</td>
                        <td>
                            @if (item.IsActive)
                            {


                                <p style="color:green">Active</p>
                            }
                            else
                            {
                                <p style="color:red">Inactive</p>
                            }
                        </td>
                        <td style="white-space: nowrap">
                            <button type="button" class="btn btn-success btn-sm btnEdit" data-id="@item.EmployeeId"><i class="fa fa-edit"></i> Edit </button>
                            <button type="button" class="btn btn-danger btn-sm btnDelete" data-id="@item.EmployeeId"><i class="fa fa-trash"></i> Delete </button>
                        </td>
                    </tr>
                }
            }

        </tbody>
        @if (Model.Any())
        {
            <tfoot>
                <tr>
                    <th>SL</th>
                    <th>Employee Name</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </tfoot>
        }
    </table>

}
<script type="text/javascript">
    makePaginationWithExport("tblEmployeeDetails");
</script>

