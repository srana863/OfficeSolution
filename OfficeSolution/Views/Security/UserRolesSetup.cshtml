@{
    ViewBag.Title = "User Role Setup";
}

<section class="content">
    <div class="container-fluid">
        <div class="card card-blue">
            <div class="card-header">
                <h3 class="card-title">User Role Setup</h3>
            </div>
            <form class="form-horizontal" id="frmUserRoles">
                <div class="card-body">
                    <input type="hidden" class="form-control form-element" id="RoleId" name="RoleId" />
                    <input type="hidden" class="form-control form-element" id="OrgId" name="OrgId" />
                    <div class="form-group row">
                        <label class="col-sm-2 control-label">Role Name<span style="color:red">*</span></label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-element" required id="RoleName" name="RoleName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control form-element" id="RoleDescription" name="RoleDescription" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-sm-2 col-sm-10">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input form-elemen" id="IsActive" name="IsActive">
                                <label class="form-check-label form-elemen" for="IsActive">Is Active</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button type="button" id="btnSave" class="btn btn-success pull-right"><i class="fa fa-save"></i> Save </button>
                    <button type="reset" id="btnClear" class="btn btn-danger pull-right"><i class="fa fa-refresh"></i> Clear</button>
                </div>
                <!-- /.card-footer -->
            </form>
        </div>

        <!-- /.row -->
    </div>
</section>
<section class="content">
    <div class="container-fluid">
        <div class="card card-blue">
            <div class="card-header">
                <h3 class="card-title">User Role List</h3>
            </div>
            <div class="card-body">
                <div id="formDetails"></div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/pageJs/security/UserRoles.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            UserRoles.init();
        });
    </script>
}
